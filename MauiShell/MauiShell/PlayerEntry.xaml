<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiShell.PlayerEntry"
             Title="Player Entry Page">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical">
            <Label HorizontalOptions="Center" FontSize="25">Player Entry UI Here</Label>
            <Label HorizontalOptions="Center" FontSize="18" Margin="0, 10">Menu Item should be displayed to abandon</Label>
            <Button Text="Start Game" WidthRequest="150" Margin="0, 20" Clicked="StartGame_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>